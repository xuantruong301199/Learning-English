 <script>
       
    $(document).on('click', '.btnAddUnit', function(e) {
		e.preventDefault();
		
		// let courseID = $(this).attr('_courseID');

        let name        = $('#name-unit').val().trim();
        // name, image, vocabluary, paragraph
        let vocabluary 	= $('#name-teacher').val().trim();

        //  if(name.length < 1 || vocabluary.length < 1){
        if(name.length < 1 ){

            return toastr['error']('Tên bộ đề không được để trống', 'Thông báo');

        } else{
            $.ajax({
                url: `/unit/insert-unit`,
                method: 'POST',
                data: {name, vocabluary},
                success: resp => {

                    console.log({ resp })
                    
                    if(!resp.error){

                        toastr['success']('Thêm thành công', 'Thông báo');
						window.location.reload();
						

                    }else{

                        return toastr['error']('Thêm thất bại', 'Thông báo');
                    }
                },
                error: err => console.log({ err })
            });
        }
    })

 </script>