<%- include('../dashboard/header') %>
		<%- include('../dashboard/sidebar') %>
		
<script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
<main class="content">
	<div class="container-fluid">
		<div class="content-header">
			<h1>Add Vocabulary</h1>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="dashboard-1.html">Chức năng</a></li>
					<li class="breadcrumb-item active">Unit</li>
				</ol>
			</nav>
		</div>

		<div class="row">
			<div class="col-lg-9">
				<form class="box needs-validation" novalidate id="formCreateQuestion"
					enctype="multipart/form-data" action="/vocabulary" method="POST">
					<div class="box-header">
						<h3>Add Vocabulary <span class="numberCountQuestion">1</span></h3>
					</div>
					<div class="box-body">
						<div class="form-group row">
							<label for="jsValidationRequired" class="form-label col-2" >Unit</label>
							<div class="col-9">
								<select id="listUnit" required class="form-control onChangeExam" >
									<option value>Choose Unit</option>
											
										<% if (listUnit && listUnit.length) { %>
											<% listUnit.forEach(unit => { %>
									<option value="<%=unit._id%>"><%=unit.name%></option>
										<% }) %>
									<% } %>
												
								</select>
							</div>
						</div>
						<div class="form-group row">
							<label class="form-label col-2">Vocabulary</label>
							<div class="col-9">
								<input name="editor1" id="english" class="form-control" autocomplete="off">
							</div>
						</div>
						<div class="form-group row">
							<label class="form-label col-2">Translate</label>
							<div class="col-9">
								<input name="editor2" id="tiengvietese" class="form-control" autocomplete="off">
							</div>
						</div>
						<div class="form-group row">
							<label class="form-label col-2">Spelling</label>
							<div class="col-9">
								<input name="editor3" id="spelling" class="form-control" autocomplete="off">
							</div>
						</div>
                        <div class="form-group row">
							<label class="form-label col-2">Tải hình ảnh</label>
                            <div class="col-9">
							    <input id="image" type="file" name="image" class="form-control">
                            </div>
						</div>
						<div class="form-group row">
							<label class="form-label col-2">Thêm file mp3</label>
                            <div class="col-9">
							    <input id="sound" type="file" name="sound" class="form-control">
                            </div>
						</div>

					<div class="box-footer">
						<button class="btn btn-primary pull-right btnCreateVocabulary" type="submit">Add vocabulary</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>

<%- include('../dashboard/footer') %>
<script>

	// //Add Vocabulary ---------------> 
	$(document).on('click', '.btnCreateVocabulary', function(e) {
		e.preventDefault();
        let unitID = 		$('#listUnit').val();
		let english = 		$('#english').val();
		let tiengvietese = $('#tiengvietese').val();
		let spelling = 		$('#spelling').val();

		// File image
		let formData = new FormData();
		let _imageDemo = $('#image')[0].files[0];
		let _sound = $('#sound')[0].files[0];


		if(_imageDemo){
			formData.append('image', _imageDemo);
		}

		if(_sound){
			formData.append('sound', _sound);
		}
		
		formData.append('unitID', unitID);
		formData.append('english', english);
		formData.append('tiengvietese', tiengvietese);
		formData.append('spelling', spelling);

		$.ajax({
			url: `/vocabulary/add-vocabulary`,
			method: 'POST',
			data: formData,
			enctype: 'multipart/form-data',
			processData: false,
        	contentType: false,
			success: resp => {
				console.log({resp})
				if(!resp.error){
					toastr['success']('Thêm thành công', 'Thông báo');
					// setTimeout(function(){ window.location.reload(); }, 700);
				}else{
					return toastr['error']('Thêm thất bại', 'Thông báo');
				}
			},
			error: err => console.log({ err })
		});
	});

       


		
		

